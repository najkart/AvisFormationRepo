
@{
    ViewBag.Title = "LaissezUnMessage";
}
<h1 style="color:blue">@TempData["Message"]</h1>
    <h2>Laissez Un Message</h2>


@using (Html.BeginForm("SaveMessage", "Contact", FormMethod.Post))
{
    <div class="form-group">
        <label for="nom">Nom : </label>
        <input type="text" name="nom" id="nom" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="email">Adresse email : </label>
        <input type="text" name="email" id="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="description">Description: </label>
        <textarea id="description" name="description" rows="6" class="form-control" required></textarea>

    </div>
    <input type="submit" class="btn btn-primary" value="Envoyer" />

}